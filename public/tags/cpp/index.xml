&lt;h1 id=&#34;c-primer-exercises-answers-a-id-orgheadline13-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;C++ Primer Exercises Answers&lt;a id=&#34;orgheadline13&#34;&gt;&lt;/a&gt;&lt;/h1&gt;

&lt;h2 id=&#34;section-2-3-1-a-id-orgheadline4-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Section 2.3.1&lt;a id=&#34;orgheadline4&#34;&gt;&lt;/a&gt;&lt;/h2&gt;

&lt;h3 id=&#34;exercise-2-15-a-id-orgheadline1-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Exercise 2.15&lt;a id=&#34;orgheadline1&#34;&gt;&lt;/a&gt;&lt;/h3&gt;

&lt;pre&gt;&lt;code&gt;int ival = 1.01; // correct
int &amp;amp;rval1 = 1.01; // wrong, type error
int &amp;amp;rval2 = ival; // correct
int &amp;amp;rval3; // not initialized
&lt;/code&gt;&lt;/pre&gt;

&lt;h3 id=&#34;exercise-2-16-a-id-orgheadline2-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Exercise 2.16&lt;a id=&#34;orgheadline2&#34;&gt;&lt;/a&gt;&lt;/h3&gt;

&lt;pre&gt;&lt;code&gt;int i = 0, &amp;amp;r1 = i; 
double d = 0, &amp;amp;r2 = d;

r2 = 3.14159; // correct
r2 = r1; // correct
i = r2; // correct
r1 = d; // correct
&lt;/code&gt;&lt;/pre&gt;

&lt;h3 id=&#34;exercise-2-17-a-id-orgheadline3-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Exercise 2.17&lt;a id=&#34;orgheadline3&#34;&gt;&lt;/a&gt;&lt;/h3&gt;

&lt;pre&gt;&lt;code&gt;int i, &amp;amp;ri = i;
i = 5;
ri = 10;
std::cout &amp;lt;&amp;lt; i &amp;lt;&amp;lt; &amp;quot; &amp;quot; &amp;lt;&amp;lt; ri &amp;lt;&amp;lt; std::endl;
&lt;/code&gt;&lt;/pre&gt;

&lt;h2 id=&#34;section-2-3-2-a-id-orgheadline8-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Section 2.3.2&lt;a id=&#34;orgheadline8&#34;&gt;&lt;/a&gt;&lt;/h2&gt;

&lt;h3 id=&#34;exercise-2-18-a-id-orgheadline5-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Exercise 2.18&lt;a id=&#34;orgheadline5&#34;&gt;&lt;/a&gt;&lt;/h3&gt;

&lt;pre&gt;&lt;code&gt;int a = 1;
int b = 2;
int *p = &amp;amp;a;
p = &amp;amp;b;
*p = 3;
std::cout &amp;lt;&amp;lt; *p;
&lt;/code&gt;&lt;/pre&gt;

&lt;h3 id=&#34;exercise-2-20-a-id-orgheadline6-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Exercise 2.20&lt;a id=&#34;orgheadline6&#34;&gt;&lt;/a&gt;&lt;/h3&gt;

&lt;pre&gt;&lt;code&gt;int i = 42;
int *p1 = &amp;amp;i;
*p1 = *p1 * *p1;
std::cout &amp;lt;&amp;lt; i;
&lt;/code&gt;&lt;/pre&gt;

&lt;h3 id=&#34;exercise-2-21-a-id-orgheadline7-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Exercise 2.21&lt;a id=&#34;orgheadline7&#34;&gt;&lt;/a&gt;&lt;/h3&gt;

&lt;pre&gt;&lt;code&gt;int i = 0;
double *dp = &amp;amp;i; // error
int *ip = i; // error
int *p = &amp;amp;i; // correct
&lt;/code&gt;&lt;/pre&gt;

&lt;h2 id=&#34;section-2-4-2-a-id-orgheadline10-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Section 2.4.2&lt;a id=&#34;orgheadline10&#34;&gt;&lt;/a&gt;&lt;/h2&gt;

&lt;h3 id=&#34;exercise-2-27-a-id-orgheadline9-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Exercise 2.27&lt;a id=&#34;orgheadline9&#34;&gt;&lt;/a&gt;&lt;/h3&gt;

&lt;pre&gt;&lt;code&gt;int a = -1, &amp;amp;b = 0; // wrong, reference to a constant 0
int c = 9, *const d = &amp;amp;c; // correct
const int e = -1, &amp;amp;f = 0; // correct
const int *const g = &amp;amp;a; // correct
const int *h = &amp;amp;a; // correct
const int &amp;amp;const i; // wrong
const int z = a, &amp;amp;y = a; // correct
&lt;/code&gt;&lt;/pre&gt;

&lt;h2 id=&#34;section-2-4-3-a-id-orgheadline12-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Section 2.4.3&lt;a id=&#34;orgheadline12&#34;&gt;&lt;/a&gt;&lt;/h2&gt;

&lt;h3 id=&#34;exercise-2-30-a-id-orgheadline11-a:cd3a3f120a2b59e540de04ca96c62534&#34;&gt;Exercise 2.30&lt;a id=&#34;orgheadline11&#34;&gt;&lt;/a&gt;&lt;/h3&gt;

&lt;pre&gt;&lt;code&gt;int i = 9;
const int v2 = 0;
int v1 = v2;
int *p1 = &amp;amp;v1, &amp;amp;r1 = v1;
const int *p2 = &amp;amp;v2, *const p3 = &amp;amp;i, &amp;amp;r2 = v2;

r1 = v2; // correct
p1 = p2; // wrong
p2 = p1; // correct
p1 = p3; // wrong
p2 = p3; // correct
&lt;/code&gt;&lt;/pre&gt;
